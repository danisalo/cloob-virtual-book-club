<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Listado de Cloobs</h1>
            <hr>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Detalles</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>


                    {{#each cloob}}

                    <tr>

                        <td>{{name}}</td>

                        <td>
                            <a href="/cloob/{{_id}}" class="btn btn-dark btn-sm">Ver</a>
                        </td>

                        {{#if ../isHost}}
                        <td>
                            <a href="/editar/{{cloob_id}}" class="btn btn-warning btn-sm">Editar</a>
                        </td>

                        {{/if}}

                        {{#if ../isAdmin}}
                        <td>
                            <a href="/editar/{{cloob_id}}" class="btn btn-warning btn-sm">Editar</a>
                        </td>

                        <td>
                            <form action="/eliminar/{{cloob_id}}" method="POST">
                                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
                            </form>
                        </td>
                        {{/if}}

                    </tr>

                    {{/each}}

                    {{#if currentUser}}
                    <a href="/cloob/crear" class="btn btn-warning btn-sm">Crear Cloob</a>
                    {{/if}}


                </tbody>
            </table>
        </div>
    </div>

    <hr>

    <a href="/" class="btn btn-dark">Volver a inicio</a>

</div>