<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Listado de Cloobs</h1>
            <hr>

            <div class="row">

                {{#each cloobs}}

                <div class="col-md-4">

                    <div class="card mb-4 cloobs" style="width: 18rem;">
                        <img class="card-img-top" src="{{cover}}" alt="Imagen del Cloob {{name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{description}}</p>
                            <hr>
                            <p class="card-text">Organizado por {{host.firstName}} {{host.lastName}}</p>
                            <hr>

                            {{#if isAdmin}}
                            <a href="/cloob/editar/{{_id}}" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/cloob/eliminar/{{_id}}" method="POST">
                                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
                            </form>
                            {{/if}}

                            <form action="/cloob/agregar/{{_id}}" method="POST">
                                <input type="submit" value="Unirse al Cloob" class="btn btn-dark btn-sm">
                            </form>
                        </div>
                    </div>

                </div>

                {{/each}}

            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 cloobs" style="width: 18rem;">
                        <img class="card-img-top" src="{{cover}}" alt="Imagen del Cloob {{name}}">
                        <div class="card-body">
                            <h5 class="card-title">CREA UN NUEVO CLUB</h5>
                            <p class="card-text">{{description}}</p>
                            <hr>
                            <a href="/cloob/editar/{{_id}}" class="btn btn-warning btn-sm">Editar</a>
                            {{#if isAdmin}}
                            <form action="/cloob/eliminar/{{_id}}" method="POST">
                                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
                            </form>
                            {{/if}}
                        </div>
                    </div>
                </div>

            </div>

        </div>