<div class="container">
    <div class="row">
        <h3>Perfil de - {{firstName}} {{lastName}}</h3>
        <div>
            <img src="{{avatar}}" alt="Avatar de {{firstName}} {{lastName}}" class="profile-picture">
        </div>
        <form action="/agregar/{{_id}}" method="POST">
            <input type="submit" value="Agregar como amigo" class="btn btn-dark btn-sm">
        </form>
    </div>

    <div class="row">
        <h2>Sus amigues</h2>
        {{#each myFriends}}
        <div class="card-friend text-center mb-3">
            <div class="card-body">
                <img src="{{avatar}}" alt="Avatar de {{firstName}} {{lastName}}" class="profile-picture">
                <h4>{{firstName}} {{lastName}}</h4>
                <a href="/perfil/{{_id}}" class="btn btn-dark btn-sm">Ver perfil</a>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="row">
        <h2>Sus Cloobs</h2>
        {{#each myCloobs}}
        <div class="card-cloob">
            <img src="{{cover}}" class="card-img-top" alt="{{name}}">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <a href="/cloob//detalles/{{_id}}" class="btn btn-primary">Ver detalles</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>